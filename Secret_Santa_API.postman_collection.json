              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Perez\",\n  \"email\": \"jperez@gmail.com\",\n  \"notes\": \"Likes tech gadgets\",\n  \"enable\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/people",
              "host": ["{{base_url}}"],
              "path": ["people"]
            },
            "description": "Create a new person in the database"
          }
        },
        {
          "name": "Get All People",
          "request": {
            "method": "GET",
            "header": [],
