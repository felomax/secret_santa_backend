    },
    {
      "name": "Gifts",
      "item": [
        {
          "name": "Create Gift",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://media.giphy.com/media/example/giphy.gif\",\n  \"title\": \"Happy Dance\",\n  \"description\": \"A celebration gif\",\n  \"category\": \"celebration\",\n  \"people_id\": \"{{person_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/gif",
              "host": ["{{base_url}}"],
              "path": ["gif"]
            },
            "description": "Create a new gift associated with a person"
          }
        },
        {
          "name": "Get All Gifts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/gif",
              "host": ["{{base_url}}"],
              "path": ["gif"]
            },
            "description": "Get all gifts with full person information"
          }
        },
        {
          "name": "Get Gifts by Person ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/gif?peopleId={{person_id}}",
              "host": ["{{base_url}}"],
              "path": ["gif"],
              "query": [
                {
                  "key": "peopleId",
                  "value": "{{person_id}}",
                  "description": "UUID of the person"
                }
              ]
            },
            "description": "Get all gifts for a specific person (optimized response)"
          }
        },
        {
          "name": "Get Gifts by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/gif?category=celebration",
              "host": ["{{base_url}}"],
              "path": ["gif"],
              "query": [
                {
                  "key": "category",
                  "value": "celebration",
                  "description": "Category name"
                }
              ]
            },
            "description": "Get all gifts in a specific category"
          }
        },
        {
          "name": "Get Gift by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/gif/{{gift_id}}",
