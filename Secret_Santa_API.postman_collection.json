          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/gif/{{gift_id}}",
              "host": ["{{base_url}}"],
              "path": ["gif", "{{gift_id}}"]
            },
            "description": "Delete a gift from the database"
          }
        }
